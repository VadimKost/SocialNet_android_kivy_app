<Manager>:
    Login:
    Account:

<Login>:
    name:'1'
    req_name:r_name.text
    req_password:r_password.text
    BoxLayout:
        orientation:'vertical'
        padding:10
        MDLabel:
            size_hint_y:0.1
            font_style:'H6'
            halign:'center'
            text:'Authorization'
        MDTextField:
            id:r_name
            hint_text: "Your login"
        MDTextField:
            id:r_password
            hint_text: "Your password"
        Image:
            source:'assets/logo.png'
            size: self.texture_size
        MDRaisedButton:
            size_hint:[1,0.1]
            text:'Enter'
            on_release:root.log();
        BoxLayout:
            size_hint:[1,0.1]
            spacing:10
            orientation:'horizontal'
            MDRaisedButton:
                size_hint:[0.5,None]
                text:'Registration'
            MDRaisedButton:
                size_hint:[0.5,None]
                text:'Forgot password?'

<Account>:
    name:'2'
    BoxLayout:
        AsyncImage:
            source:'assets/logo.png'