<MyMDLabel@MDLabel>:
    theme_text_color: "Custom"
    text_color: 1, 1, 1, 1
<Manager>:
    Login:
    Account:

<Login>:
    name:'1'
    req_name:r_name.text
    req_password:r_password.text
    BoxLayout:
        orientation:'vertical'
        padding:10
        MDLabel:
            size_hint_y:0.1
            font_style:'H6'
            halign:'center'
            text:'Authorization'
        MDTextField:
            id:r_name
            hint_text: "Your login"
        MDTextField:
            id:r_password
            hint_text: "Your password"
        Image:
            source:'assets/new_logo.png'
            size: self.texture_size
        MDRaisedButton:
            size_hint:[1,0.1]
            text:'Enter'
            on_release:root.log();
        BoxLayout:
            size_hint:[1,0.1]
            spacing:10
            orientation:'horizontal'
            MDRaisedButton:
                size_hint:[0.5,None]
                text:'Registration'
            MDRaisedButton:
                size_hint:[0.5,None]
                text:'Forgot password?'

<Account>:
    name:'2'
    about_me:about_me
    image:image
    username:username
    address:address
    phone:phone
    MDBackdrop:
        title:'AboutMe'
        header_text:"Swipe to look"
        close_icon:'arrow-collapse-up'
        MDBackdropFrontLayer:
            ScrollView:
                GridLayout:
                    cols:1
                    size_hint_y:None
                    height:20
                    spacing:10
                    MDLabel:
                        text:'My posts'
        MDBackdropBackLayer:
            ScrollView:
                GridLayout:
                    size_hint_y:None
                    height:100
                    cols:1
                    spacing:10
                    GridLayout:
                        size_hint_y:None
                        cols:2
                        GridLayout:
                            cols:1
                            AsyncImage:
                                id:image
                                size_hint_y:None
                                height:100
                        GridLayout:
                            size_hint_y:None
                            cols:2
                            MyMDLabel:
                                font_style:'Subtitle2'
                                size_hint_y:None
                                height:33
                                text:'Username'
                            MyMDLabel:
                                id:username
                                font_style:'Caption'
                                size_hint_y:None
                                height:33
                            MyMDLabel:
                                font_style:'Subtitle2'
                                size_hint_y:None
                                height:33
                                text:'City'
                            MyMDLabel:
                                id:address
                                font_style:'Caption'
                                size_hint_y:None
                                height:33
                            MyMDLabel:
                                font_style:'Subtitle2'
                                size_hint_y:None
                                height:33
                                text:'Phone'
                            MyMDLabel:
                                id:phone
                                font_style:'Caption'
                                size_hint_y:None
                                height:33

                    MyMDLabel:

                        size_hint_y:None
                        font_style:'H6'
                        height:10
                        halign:'center'
                        text:'About me'
                    MyMDLabel:
                        id:about_me
                        size_hint_y:None
                        font_style:'Body2'
                        height:50
                        text:"as"

