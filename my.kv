#:import Window kivy.core.window.Window
<MyMDLabel@MDLabel>:
    theme_text_color: "Custom"
    text_color: 1, 1, 1, 1
<Manager>:
    Login:
    Account:

<Login>:
    name:'1'
    req_name:r_name.text
    req_password:r_password.text
    BoxLayout:
        orientation:'vertical'
        padding:10
        MDLabel:
            theme_text_color: "Custom"
            text_color: 1,0.53,0.19,1
            size_hint_y:0.1
            font_style:'H6'
            halign:'center'
            text:'Authorization'
        MDTextField:
            color_mode: 'custom'
            line_color_focus: .5, .5, 0, 1
            id:r_name
            hint_text: "Your login"
        MDTextField:
            color_mode: 'custom'
            line_color_focus: .5, .5, 0, 1
            id:r_password
            hint_text: "Your password"
        Image:
            source:'assets/new_logo.png'
            size: self.texture_size
        MDRaisedButton:
            md_bg_color:1,0.53,0.19,1
            size_hint:[1,0.1]
            text:'Enter'
            on_release:root.log();
        BoxLayout:
            size_hint:[1,0.1]
            spacing:10
            orientation:'horizontal'
            MDRaisedButton:
                md_bg_color:1,0.53,0.19,1
                size_hint:[0.5,None]
                text:'Registration'
            MDRaisedButton:
                md_bg_color:1,0.53,0.19,1
                size_hint:[0.5,None]
                text:'Forgot password?'

<Account>:
    name:'2'
    about_me:about_me
    image:image
    username:username
    address:address
    phone:phone
    MDBackdrop:
        id:drop
        left_action_items: [['menu', lambda x: self.open(-Window.height / 2)]]
        padding:10,10,10,10
        background_color:1,0.73,0.27,1
        title:'AboutMe'
        header_text:"Click to look personal inf"
        close_icon:'arrow-collapse-up'
        MDBackdropFrontLayer:
            ScrollView:
                GridLayout:
                    cols:1
                    size_hint_y:None
                    height:700
                    spacing:10
                    MDLabel:
                        halign: "center"
                        text:'My posts'
                    MDLabel:
                        halign: "center"
                        text:'My posts'
                    MDLabel:
                        halign: "center"
                        text:'My posts'
                    MDLabel:
                        halign: "center"
                        text:'My posts'
                    MDLabel:
                        halign: "center"
                        text:'My posts'
                    MDLabel:
                        halign: "center"
                        text:'My posts'
        MDBackdropBackLayer:
            padding:10,10,10,10
            ScrollView:
                GridLayout:
                    size_hint_y:None
                    height:200
                    cols:1
                    spacing:10
                    MDCard:
                        size_hint_y:None
                        height:150
                        md_bg_color:1,.64,.03,1
                        AsyncImage:
                            
                            id:image
                            size_hint_y:None
                            height:150
                    MDCard:
                        size_hint_y:None
                        height:30
                        md_bg_color:1,.64,.03,1
                        padding:10,10,10,10
                        GridLayout:
                            padding:10,10,10,10
                            size_hint_y:None
                            height:30
                            cols:2
                            MyMDLabel:
                                font_style:'Subtitle2'
                                size_hint_y:None
                                height:33
                                text:'Username'
                            MyMDLabel:
                                id:username
                                font_style:'Caption'
                                size_hint_y:None
                                height:33
                    MDCard:
                        size_hint_y:None
                        height:30
                        md_bg_color:1,.64,.03,1
                        padding:10,10,10,10
                        GridLayout:
                            padding:10,10,10,10
                            size_hint_y:None
                            height:30
                            cols:2
                            MyMDLabel:
                                font_style:'Subtitle2'
                                size_hint_y:None
                                height:33
                                text:'City'
                            MyMDLabel:
                                id:address
                                font_style:'Caption'
                                size_hint_y:None
                                height:33
                    MDCard:
                        size_hint_y:None
                        height:30
                        md_bg_color:1,.64,.03,1
                        padding:10,10,10,10
                        GridLayout:
                            padding:10,10,10,10
                            size_hint_y:None
                            height:30
                            cols:2

                            MyMDLabel:
                                font_style:'Subtitle2'
                                size_hint_y:None
                                height:33
                                text:'Phone'
                            MyMDLabel:
                                id:phone
                                font_style:'Caption'
                                size_hint_y:None
                                height:33
                    GridLayout:
                        size_hint_y:None
                        height:30
                        cols:2
                        MyMDLabel:
                            size_hint_y:None
                            font_style:'H6'
                            height:10
                            halign:'right'
                            text:'About me'
                        MDIconButton:
                            size_hint_y:None
                            height:15
                            icon:'arrow-collapse-down'
                            on_press:drop.close();drop.open()
                    MyMDLabel:
                        id:about_me
                        size_hint_y:None
                        font_style:'Body2'
                        height:50
                        text:"as"

